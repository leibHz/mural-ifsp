# ============================================
# CONFIGURAÇÕES DO MURAL IFSP
# ============================================

# ===== SUPABASE =====
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua_chave_publica_aqui
SUPABASE_SERVICE_KEY=sua_service_key_aqui

# ===== FLASK =====
SECRET_KEY=sua_chave_secreta_super_segura_mude_isso
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=backend/app.py

# ===== JWT =====
JWT_SECRET_KEY=outra_chave_secreta_diferente_mude_isso
JWT_EXPIRATION_HOURS=24
JWT_ALGORITHM=HS256

# ===== EMAIL (SUPABASE SMTP) =====
# O Supabase Auth envia emails automaticamente!
# Para desenvolvimento: SMTP padrão (2 emails/hora)
# Para produção: Configure SMTP personalizado no dashboard do Supabase

# Usar SMTP nativo do Supabase (recomendado)
USE_SUPABASE_SMTP=True

# SMTP Personalizado (apenas se USE_SUPABASE_SMTP=False)
# Opção 1: Resend (recomendado - 3.000 emails/mês grátis)
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=465
# SMTP_USER=resend
# SMTP_PASSWORD=sua_api_key_resend
# EMAIL_FROM=noreply@seudominio.com

# Opção 2: SendGrid (100 emails/dia grátis)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=sua_api_key_sendgrid
# EMAIL_FROM=noreply@seudominio.com

# Opção 3: Brevo (300 emails/dia grátis)
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_USER=seu_email_brevo
# SMTP_PASSWORD=sua_senha_brevo
# EMAIL_FROM=noreply@seudominio.com

# ===== UPLOAD DE ARQUIVOS =====
UPLOAD_FOLDER=frontend/static/uploads
MAX_FILE_SIZE=52428800
# Tamanho máximo: 50MB em bytes

# Formatos permitidos
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_FORMATS=mp4,webm,mov
ALLOWED_AUDIO_FORMATS=mp3,wav,ogg
ALLOWED_DOC_FORMATS=pdf

# ===== TRANSCRIÇÃO DE ÁUDIO =====
# Usar Whisper local (gratuito, open source)
TRANSCRIPTION_SERVICE=whisper_local
WHISPER_MODEL=base
# Modelos disponíveis: tiny, base, small, medium, large
# tiny: mais rápido, menos preciso
# base: equilíbrio (RECOMENDADO)
# small: boa precisão
# medium: melhor precisão, mais lento
# large: máxima precisão, muito lento

# Alternativa: Deepgram (com créditos grátis)
# TRANSCRIPTION_SERVICE=deepgram
# DEEPGRAM_API_KEY=sua_chave_deepgram

# ===== SEGURANÇA =====
# Rate limiting
RATE_LIMIT_POSTS_PER_HOUR=10
RATE_LIMIT_COMMENTS_PER_HOUR=50
RATE_LIMIT_LOGIN_ATTEMPTS=5

# CORS
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ===== IFSP ESPECÍFICO =====
# Domínio do email institucional
IFSP_EMAIL_DOMAIN=@aluno.ifsp.edu.br

# Validação de BP (Prontuário)
BP_REGEX=^[A-Z]{2}[0-9]{6}[A-Z0-9]{1,2}$
# Exemplo: BP1234567X

# ===== MODERAÇÃO =====
# Número de denúncias para ocultar automaticamente
AUTO_HIDE_THRESHOLD=3

# ===== CACHE =====
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ===== LOGS =====
LOG_LEVEL=INFO
LOG_FILE=logs/mural-ifsp.log

# ===== DESENVOLVIMENTO =====
# Desabilitar algumas validações em dev
DEV_MODE=True
SKIP_EMAIL_VERIFICATION=False